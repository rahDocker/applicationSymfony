{% extends 'base.html.twig' %}
{% block stylesheets %}
{{ parent() }}
{% endblock %}
{% block body %}

{% if error %}
<div class="alert alert-danger">
    {{ error.messageKey }}
</div>
{% endif %}

<body id="LoginForm">
    <div class="container">
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h2>Sign in</h2>
                </div>
                <form id="Login" action="{{ path('security_login') }}" method="post">

                    <div class="form-group">

                        <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Email Address">

                    </div>

                    <div class="form-group">

                        <input type="password" class="form-control" id="password" name="_password" placeholder="Password">

                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

                    <button type="submit" class="btn btn-primary">Sign in</button><br><br><br>
                    <a href="/register">Register</a>

                </form>
            </div>

        </div>
    </div>
</div>
</body>



{% endblock %}

{% block javascripts %}
{{ parent() }}

{% endblock %}